<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_red_gradient"
    tools:context=".ViewDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/donorImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin2x"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/viewNameTV"
            android:layout_width="@dimen/ETSizeHorizontal"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableLeft="@drawable/icon_text"
            android:drawablePadding="@dimen/padding"
            android:padding="@dimen/paddingHalf"
            android:textColor="#000000"
            android:textSize="@dimen/ETFont"
            android:layout_marginTop="@dimen/margin2x"
            android:layout_marginBottom="@dimen/margin"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/viewGroupTV"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_shield"
                android:drawablePadding="@dimen/paddingHalf"
                android:padding="@dimen/paddingHalf"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="@dimen/ETFont"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/margin"
                android:layout_marginRight="@dimen/margin2x"/>

            <TextView
                android:id="@+id/viewGenderTV"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableLeft="@drawable/icon_gender"
                android:drawablePadding="@dimen/padding"
                android:padding="@dimen/paddingHalf"
                android:textColor="#000000"
                android:textSize="@dimen/ETFont"
                android:layout_marginBottom="@dimen/margin"/>

        </LinearLayout>
        <TextView
            android:id="@+id/viewPhoneTV"
            android:layout_width="@dimen/ETSizeHorizontal"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableLeft="@drawable/icon_phone"
            android:drawablePadding="@dimen/padding"
            android:padding="@dimen/paddingHalf"
            android:textColor="#000000"
            android:textSize="@dimen/ETFont"
            android:layout_marginBottom="@dimen/margin"/>

        <TextView
            android:id="@+id/viewEmailTV"
            android:layout_width="@dimen/ETSizeHorizontal"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableLeft="@drawable/icon_email"
            android:drawablePadding="@dimen/padding"
            android:padding="@dimen/paddingHalf"
            android:textColor="#000000"
            android:textSize="@dimen/ETFont"
            android:layout_marginBottom="@dimen/margin"/>

        <TextView
            android:id="@+id/viewAddressTV"
            android:layout_width="@dimen/ETSizeHorizontal"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableLeft="@drawable/icon_address"
            android:drawablePadding="@dimen/padding"
            android:padding="@dimen/paddingHalf"
            android:textColor="#000000"
            android:textSize="@dimen/ETFont"
            android:layout_marginBottom="@dimen/margin"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <Button
                android:id="@+id/callDonorBtn"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:text="Call"
                android:background="#9CCC65"
                android:layout_marginRight="@dimen/margin2x"
                android:onClick="callDonor"/>

            <Button
                android:id="@+id/smsDonorBtn"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:text="SMS"
                android:background="#00BCD4"
                android:layout_marginBottom="@dimen/margin"
                android:onClick="textDonor"/>

        </LinearLayout>
        <Button
            android:id="@+id/reqDonorBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="SMS"
            android:background="#00BCD4"
            android:layout_marginBottom="@dimen/margin"
            android:visibility="gone"
            android:onClick="requestDonor"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>